{
  "dashboard": {
    "id": null,
    "title": "Zero Trust Security Dashboard",
    "tags": ["zero-trust", "security", "authentication", "authorization"],
    "style": "dark",
    "timezone": "browser",
    "panels": [
      {
        "id": 1,
        "title": "Authentication Success Rate",
        "type": "stat",
        "targets": [
          {
            "expr": "rate(auth_success_total[5m]) / (rate(auth_success_total[5m]) + rate(auth_failure_total[5m])) * 100",
            "legendFormat": "Success Rate %"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "thresholds"
            },
            "thresholds": {
              "steps": [
                {"color": "red", "value": 0},
                {"color": "yellow", "value": 80},
                {"color": "green", "value": 95}
              ]
            },
            "unit": "percent"
          }
        },
        "gridPos": {"h": 8, "w": 6, "x": 0, "y": 0}
      },
      {
        "id": 2,
        "title": "Failed Login Attempts",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(auth_failure_total[5m])",
            "legendFormat": "{{reason}}"
          }
        ],
        "yAxes": [
          {"label": "Failures/sec", "min": 0}
        ],
        "gridPos": {"h": 8, "w": 18, "x": 6, "y": 0}
      },
      {
        "id": 3,
        "title": "Authorization Decisions",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(opa_authorization_total{decision=\"allow\"}[5m])",
            "legendFormat": "Allowed"
          },
          {
            "expr": "rate(opa_authorization_total{decision=\"deny\"}[5m])",
            "legendFormat": "Denied"
          }
        ],
        "yAxes": [
          {"label": "Decisions/sec", "min": 0}
        ],
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 8}
      },
      {
        "id": 4,
        "title": "Policy Evaluation Time",
        "type": "graph",
        "targets": [
          {
            "expr": "histogram_quantile(0.95, rate(opa_evaluation_duration_seconds_bucket[5m]))",
            "legendFormat": "95th percentile"
          },
          {
            "expr": "histogram_quantile(0.50, rate(opa_evaluation_duration_seconds_bucket[5m]))",
            "legendFormat": "Median"
          }
        ],
        "yAxes": [
          {"label": "Seconds", "min": 0}
        ],
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 8}
      },
      {
        "id": 5,
        "title": "JWT Token Validations",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(jwt_validation_total{result=\"valid\"}[5m])",
            "legendFormat": "Valid Tokens"
          },
          {
            "expr": "rate(jwt_validation_total{result=\"invalid\"}[5m])",
            "legendFormat": "Invalid Tokens"
          },
          {
            "expr": "rate(jwt_validation_total{result=\"expired\"}[5m])",
            "legendFormat": "Expired Tokens"
          }
        ],
        "yAxes": [
          {"label": "Validations/sec", "min": 0}
        ],
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 16}
      },
      {
        "id": 6,
        "title": "Rate Limiting by IP",
        "type": "table",
        "targets": [
          {
            "expr": "topk(10, rate(http_requests_total{status_code=\"429\"}[5m]))",
            "format": "table",
            "instant": true
          }
        ],
        "transformations": [
          {
            "id": "organize",
            "options": {
              "excludeByName": {
                "Time": true,
                "__name__": true,
                "job": true,
                "instance": true
              },
              "renameByName": {
                "Value": "Rate Limited/sec",
                "client_ip": "Client IP"
              }
            }
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 16}
      },
      {
        "id": 7,
        "title": "Suspicious Activity",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(suspicious_activity_total[5m])",
            "legendFormat": "{{activity_type}}"
          }
        ],
        "yAxes": [
          {"label": "Events/sec", "min": 0}
        ],
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 24}
      },
      {
        "id": 8,
        "title": "Certificate Expiry",
        "type": "stat",
        "targets": [
          {
            "expr": "ssl_certificate_expiry_seconds",
            "legendFormat": "{{job}} - {{domain}}"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "thresholds"
            },
            "thresholds": {
              "steps": [
                {"color": "red", "value": 0},
                {"color": "yellow", "value": 86400},
                {"color": "green", "value": 604800}
              ]
            },
            "unit": "s"
          }
        },
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 24}
      },
      {
        "id": 9,
        "title": "Security Events Timeline",
        "type": "logs",
        "targets": [
          {
            "expr": "{job=\"security-events\"}",
            "legendFormat": "{{event_type}}"
          }
        ],
        "gridPos": {"h": 8, "w": 24, "x": 0, "y": 32}
      }
    ],
    "time": {
      "from": "now-1h",
      "to": "now"
    },
    "refresh": "30s"
  }
} 